# TCP port used by the backend server (dev or production container); Docker Compose maps this to a host port
BACEKND_PORT=3000

# Used by docker compose, should be the same as BACKEND_PORT
PORT=3000

# API key required for access to protected endpoints
API_KEY=your_api_key_here

# Base URL for the upstream Nano GPT image generation API
NANO_GPT_BASE_URL=https://nano-gpt.com

# Secret used to sign JSON Web Tokens; change in production
JWT_SECRET=dev-secret-change-me

# Optional override to force secure cookies even in non-production
COOKIE_SECURE=false

# Node environment mode; typically development, test, or production
NODE_ENV=development

# Path (file: URL or filesystem path) to the SQLite database file (relative to apps/backend/index.ts when not absolute)
DB_FILE_NAME=file:./data/local.db

# Directory for generated images (relative to apps/backend/index.ts or absolute path)
GENERATED_DIR=./data/generated
